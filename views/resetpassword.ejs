<% layout('layouts/boilerplate_trackadmin.ejs') %>
    <%- include('partials/navbar_admin.ejs') %>
        <div class="container position-absolute">
            <h2 style="margin-top: 20px;">Change Password</h2>
            <form action="/admin/resetpassword" method="POST" class="validated-form" novalidate>
                <div>
                    <label class="form-label" for="oldpassword">Password</label>
                     <input class="form-control mb-2 me-sm-2 col-4" type="oldpassword" id="oldpassword" name="oldpassword" required width="10px";>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            
                <div>
                    <label class="form-label" for="newpassword"> Confirm Password</label>
                    <input class="form-control col-4" type="newpassword" id="newpassword" name="newpassword" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <button class="btn btn-success" style="margin-top: 30px;">Change Password</button>
            </form>
            <p class="text-danger">
                <%=error %>
            </p>
            <p class="text-success">
                <%=success %>
            </p>
