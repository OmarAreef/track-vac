<% layout('layouts/boilerplate_track.ejs') %>
    <%- include('partials/navbar_admin.ejs') %>
        <link rel="stylesheet" href="/CSS/adminHome.css">
        <div class="container position-absolute w-100">
            <h2 style="margin-top: 30px;">Edit this Center</h2>
            <form action="/admin/editcenter/<%= center._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-4">
                        <div class="mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input class="form-control" type="text" id="name" name="center[name]"
                                value="<%= center.name %>" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="latitude">latitude</label>
                            <input class="form-control" type="text" id="latitude" value="<%= center.latitude%> "
                                name="center[latitude]" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="longitude">longitude</label>
                            <input class="form-control" type="text" id="longitude"
                                value="<%= center.longitude %> " name="center[longitude]" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="governorate">Governorate</label>
                            <input class="form-control" type="text" id="governorate" name="center[governorate]"
                                value="<%= center.governorate %> " required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="district">District</label>
                            <input class="form-control" type="text" id="district" name="center[district]"
                                value="<%= center.district %> " required>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mb-3">
                            <label class="form-label" for="governorateArabic"> Governorate Arabic</label>
                            <input class="form-control" type="text" id="governorateArabic"
                                name="center[governorateArabic]" required value="<%= center.governorateArabic %> ">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="districtArabic"> District Arabic</label>
                            <input class="form-control" type="text" id="districtArabic"
                                name="center[districtArabic]" value="<%= center.districtArabic %> " required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="nameArabic"> Name Arabic</label>
                            <input class="form-control" type="text" id="nameArabic" name="center[nameArabic]"
                                value="<%= center.nameArabic %> " required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="image">Image Url</label>
                            <input class="form-control" type="text" id="image" name="center[image]"
                                value="<%= center.image %> " required>
                        </div>
                    </div>
                    <div class="col-4">
                        <span class="mb-2">Timings</span>
                        <div class="input-group mb-3">
                            <span class="input-group-text">sun</span>
                            <input type="text" name='sunFrom' class="form-control" value="<%= sun.From %> ">
                            <input type="text" name='sunTo' class="form-control" value="<%= sun.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">mon</span>
                            <input type="text" name='monFrom' class="form-control" value="<%= mon.From %> ">
                            <input type="text" name='monTo' class="form-control" value="<%= mon.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Tue</span>
                            <input type="text" name='tueFrom' class="form-control" value="<%= tue.From %> ">
                            <input type="text" name='tueTo' class="form-control" value="<%= tue.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Wed</span>
                            <input type="text" name='wedFrom' class="form-control" value="<%= wed.From %> ">
                            <input type="text" name='wedTo' class="form-control" value="<%= wed.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Thu</span>
                            <input type="text" name='thuFrom' class="form-control" value="<%= thu.From %> ">
                            <input type="text" name='thuTo' class="form-control" value="<%= thu.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Fri</span>
                            <input type="text" name='friFrom' class="form-control" value="<%= fri.From %> ">
                            <input type="text" name='friTo' class="form-control" value="<%= fri.To %> ">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text">Sat</span>
                            <input type="text" name='satFrom' class="form-control" value="<%= sat.From %> ">
                            <input type="text" name='satTo' class="form-control" value="<%= sat.To %> ">
                        </div>

                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" style="margin-left: 650px;">Edit Center</button>
                </div>
            </form>

           
