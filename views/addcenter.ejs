<% layout('layouts/boilerplate_track.ejs') %>
    <%- include('partials/navbar_admin.ejs') %>
        <div class="container position-absolute">
            <h2>Add Center</h2>
            <form action="/admin/addcenter" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="center[name]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="latitude">latitude</label>
                    <input class="form-control" type="text" id="latitude" name="center[latitude]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="longitude">longitude</label>
                    <input class="form-control" type="text" id="longitude" name="center[longitude]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="governorate">Governorate</label>
                    <input class="form-control" type="text" id="governorate" name="center[governorate]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="district">District</label>
                    <input class="form-control" type="text" id="district" name="center[district]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="governorateArabic"> Governorate Arabic</label>
                    <input class="form-control" type="text" id="governorateArabic" name="center[governorateArabic]"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="districtArabic"> District Arabic</label>
                    <input class="form-control" type="text" id="districtArabic" name="center[districtArabic]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="nameArabic"> Name Arabic</label>
                    <input class="form-control" type="text" id="nameArabic" name="center[nameArabic]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="center[image]" required>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">sun</span>
                    <input type="text" name='sunFrom' class="form-control">
                    <input type="text" name='sunTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">mon</span>
                    <input type="text" name='monFrom' class="form-control">
                    <input type="text" name='monTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Tue</span>
                    <input type="text" name='tueFrom' class="form-control">
                    <input type="text" name='tueTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Wed</span>
                    <input type="text" name='wedFrom' class="form-control">
                    <input type="text" name='wedTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Thu</span>
                    <input type="text" name='thuFrom' class="form-control">
                    <input type="text" name='thuTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Fri</span>
                    <input type="text" name='friFrom' class="form-control">
                    <input type="text" name='friTo' class="form-control">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Sat</span>
                    <input type="text" name='satFrom' class="form-control">
                    <input type="text" name='satTo' class="form-control">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Center</button>
                </div>
            </form>

            <p class="text-danger">
                <%=error %>
            </p>
            <p class="text-success">
                <%=success %>
            </p>
            <!-- Optional JavaScript; choose one of the two! -->

            <!-- Option 1: Bootstrap Bundle with Popper -->
