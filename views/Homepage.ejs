                       <img  id="globe" class ="img-fluid" src="/img/globe.png" style="z-index: 2;"></img> 

                       <select id="language" name ="Language" style="z-index: 2; " value="Language">
                       <option value="English">English</option>
                       <option value="Arabic">Arabic</option>
                       </select> 
                    </div>
                </div>
            </div>
            <div  id= "up" class="container" style="z-index: 2;"> 
                <div class = "row"  style="z-index: 2;">
                  <h1 class="col-4"  style="font-weight: bolder; color: white;">The best for you, </h1> 
                </div>
                <div class = "row"  style="z-index: 2;">
                   <p class="col-1"></p>
                   <h1  class="col-4" style="font-weight: bolder; color: white; ">showed for you </h1> 
                </div>
                <div class = "row"  style="z-index: 2;"> 
                    <p class="col" ></p>
                </div>
                <div  class = "row"  style="z-index: 2;">
                    <h2 class="col-5" style="color: white;">Find and share more information </h2>
                </div>
                <div  class = "row"  style="z-index: 2;">
                    <h2 class="col-4" style="color: white;">about vaccine Holders </h2> 
                </div>
                <div class = "row"  style="z-index: 2;"> 
                    <p class="col" ></p>
                </div>
                <div class = "row"  style="z-index: 2;"> 
                    <button class = "col-2 " id="Starttracking" style="z-index: 2;" ><a class="menu" href="#start" >Start Tracking</a></button>
                    <button  class = "col-2 " id="Aboutus"  style="z-index: 2;"><a class="menu" href="/about" >About us</a></button> 
                </div>
            </div> 
        </div>
        <div class="scroll-down next-section animate data-animate" style="background-color: azure;  z-index: 3; ">

            <a href="#start"  ><img class="scroll" src="/img/Vector.png" style="width: 2%; z-index: 3;" ></a>

            <div style="z-index: 3;"><p style="z-index: 3;">Scroll Down</p>
            </div>
        </div>
           
        <div id = "start" class="container" style="width: 100%; height:100vh; background: rgba(255, 255, 255, 0.2);
             box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); " >
             <%- include('partials/navBar.ejs') %>
            <div class="row" >
            <div id="filters" class="col-3 container-fluid " style="z-index: 2;">
                <div class ="row" >
                  <p></p>
                </div>
                <div class ="row" >
                   <p class="col-4" ></p>
                   <h1 class ="col-1>" >Filters</h1>
                </div>
