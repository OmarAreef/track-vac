                <div class="row" ><p></p></div>
                <div class="row" ><p></p></div>
                <div class="row" ><p></p></div>

                    <%for(let center of centerHelper) {%>
                        <div class="row" style="border-top:1px solid #E4E4E7 ;"> </div>

                        <div class = "row results">
                            <a id ="center" href="<%=center._id%>">
        
                                <%= center.name %>
                            </a>
        
                        </div>
                        <% }%>
            </div>
            <div class="col-4 map">
        
            </div>
            </div>
           
