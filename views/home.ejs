<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Test</title>
</head>

<body>
    <div class="container">
        <div class="form-group">
            <label for="inputState">Governorates</label>
            <select id="eventtype1" class="form-control">
                <option value="" disabled selected hidden>
                    Select governorate
                </option>
                <% for(let govern of governorates) { %>

                    <%if(governorate===govern){%>
                        <option selected>
                            <%= govern %>
                        </option>
                        <%} else { %>
                            <option>
                                <%= govern %>
                            </option>
                            <%}%>

                                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="inputState">Districts</label>
            <select id="eventtype2" class="form-control">
                <option value="" disabled selected hidden>
                    Select district
                </option>
                <% for(let dist of districts) { %>
                    <%if(district===dist){%>
                        <option selected>
                            <%= dist %>
                        </option>
                        <%} else { %>
                            <option>
                                <%= dist %>
                            </option>
                            <%}%>
                                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="inputState">Centers</label>
            <select id="eventtype3" class="form-control">
                <option value="" disabled selected hidden>
                    Select center
                </option>
                <% for(let cent of centers) { %>
                    <%if(name===cent){%>
                        <option selected>
                            <%= cent %>
                        </option>
                        <%} else { %>
                            <option>
                                <%= cent %>
                            </option>
                            <%}%>
                                <% } %>
            </select>
        </div>
    </div>
    <div class="container">
        <ul>
            <%for(let center of centerHelper) {%>
                <li>
                    <a href="<%=center._id%>">

                        <%= center.name %>
                    </a>

                </li>
                <% }%>
        </ul>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
    -->

</body>
<script>
    $(document).on('ready', function () {

        $("#eventtype1").on('change', function () {
            var e1 = $(this).val();
            window.location.href = "/center/?governorate=" + e1;
        });
        $("#eventtype2").on('change', function () {
            var e1 = $("#eventtype1").val();
            var e2 = $("#eventtype2").val();
            window.location.href = "/center/?governorate=" + e1 + "&district=" + e2;
        });
        $("#eventtype3").on('change', function () {
            var e1 = $("#eventtype1").val();
            var e2 = $("#eventtype2").val();
            var e3 = $("#eventtype3").val();
            window.location.href = "/center/?governorate=" + e1 + "&district=" + e2 + "&name=" + e3;
        });
    });
</script>

</html>