<% layout('layouts/boilerplate_track.ejs') %>
    <%- include('partials/navbar_admin.ejs') %>
        <div class="container position-absolute">
            <h1>Add another Admin</h1>
            <form action="/admin/addadmin" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="inputState">Role</label>
                    <select id="role" class="form-control" name="role">
                        <option value="Moderator">Moderator</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
                <button class="btn btn-success">Add admin</button>
            </form>
            <p class="text-danger">
                <%=error %>
            </p>
            <p class="text-success">
                <%=success %>
            </p>
